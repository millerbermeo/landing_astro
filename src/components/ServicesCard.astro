---
const { image, name, description, items } = Astro.props;
---
<div class="bg-white shadow-lg rounded-2xl overflow-hidden max-w-md">
  <img src={image} alt={name} class="w-full h-48 object-cover" />
  <div class="p-5 flex flex-col gap-3">
    <h2 class="text-2xl font-semibold text-gray-800">{name}</h2>
    <p class="text-md text-gray-700 leading-relaxed">{description}</p>
    
    <div class=" pr-2">
      <ul class="text-sm text-gray-600 list-disc pl-5 space-y-2">
        {items.map((item: any) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </div>
</div>
