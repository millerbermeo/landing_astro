<style>
    .wave-section {
        position: relative;
        background-color: #ff451b;
        padding: 6rem 1rem;
        overflow: hidden;
    }

    .wave-section::before {
        content: "";
        position: absolute;
        top: -60px;
        left: 0;
        width: 100%;
        height: 100px;
        background: white;
        border-bottom-left-radius: 100% 100%;
        border-bottom-right-radius: 100% 100%;
    }

    .wave-section::after {
        content: "";
        position: absolute;
        bottom: -60px;
        left: 0;
        width: 100%;
        height: 100px;
        background: white;
        border-top-left-radius: 100% 100%;
        border-top-right-radius: 100% 100%;
    }

    .devices-wrapper {
        position: relative;
        z-index: 10;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .devices-wrapper img {
        max-width: 100%;
        height: auto;
    }
</style>

<section class="wave-section">
    <div class="devices-wrapper">
        <img src="/ruta/a/tu/imagen.png" alt="Dispositivos" />
    </div>
</section>
